import { Button, Card, CardContent, CardDescription, CardHeader, CardTitle } from '@repo/ui';

const features = [
  {
    title: "üèÄ AI-Powered Highlights",
    description: "Automatically detect and extract exciting plays",
    content: "Turn hours of basketball footage into engaging highlight reels with advanced AI that identifies dunks, three-pointers, and game-changing moments."
  },
  {
    title: "‚ö° Lightning Fast",
    description: "Process full game footage in minutes, not hours",
    content: "Our cloud-based AI processes your videos quickly, so you can get highlights out to your audience while the excitement is fresh."
  },
  {
    title: "üì± Social Media Ready",
    description: "Export optimized for TikTok, YouTube, Instagram, and more",
    content: "One-click exports in the perfect format and aspect ratio for every major social platform. No manual resizing or reformatting needed."
  },
  {
    title: "üé¨ Professional Quality",
    description: "Crisp highlights that look like professionally edited content",
    content: "Smart transitions, smooth camera work, and automatic audio leveling make every highlight reel look professionally produced."
  },
  {
    title: "üé® Custom Branding",
    description: "Add your logo, colors, and intro/outro sequences",
