---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Button, Card, CardContent, CardDescription, CardHeader, CardTitle } from '@repo/ui';

const title = "Pricing - Basketball Highlights AI";
const description = "Simple, transparent pricing for basketball content creators. Choose the plan that fits your needs.";

const plans = [
  {
    name: "Starter",
    price: "$0",
    period: "forever",
    description: "Perfect for trying out the platform",
    features: [
      "5 games processed per month",
      "Standard definition output (720p)",
      "Basic play detection",
      "1 export format per game",
      "No custom branding",
      "Community support"
    ],
    cta: "Start Free",
    href: "/signup",
    variant: "outline" as const
  },
  {
    name: "Creator",
    price: "$29",
    period: "per month",
    description: "For serious basketball content creators",
    popular: true,
    features: [
      "50 games processed per month",
      "High definition output (1080p)",
      "Advanced AI play detection",
      "Unlimited export formats",
      "Custom branding & watermarks",
      "Email support",
      "Priority processing"
    ],
    cta: "Start Trial",
    href: "/signup",
    variant: "default" as const
  },
  {
    name: "Professional",
    price: "$99",
    period: "per month",
    description: "For media companies and power users",
    features: [
      "Unlimited games processed",
      "4K ultra HD output",
      "All AI features included",
      "Batch processing (100+ games)",
      "White-label options",
      "Priority dedicated support",
      "API access",
      "Team collaboration features",
      "Custom integrations"
    ],
    cta: "Contact Sales",
    href: "/contact",
    variant: "outline" as const
  }
];

const faqs = [
  {
    question: "How does the free trial work?",
    answer: "The Creator plan includes a 14-day free trial. You'll have full access to all features and can process up to 50 games. No credit card required to start."
  },
  {
    question: "What counts as a 'game'?",
    answer: "A game is any video file you upload for processing, regardless of length. Whether it's a full 48-minute NBA game or a 10-minute highlight compilation, it counts as one game."
  },
  {
    question: "Can I change plans anytime?",
    answer: "Yes! You can upgrade or downgrade your plan at any time. When you upgrade, you'll get immediate access to new features. When you downgrade, changes take effect at the next billing cycle."
  },
  {
    question: "What export formats do you support?",
    answer: "We support MP4 and MOV exports in various aspect ratios (16:9 for YouTube, 9:16 for TikTok/Reels, 1:1 for Instagram). We also optimize for specific social platform requirements."
  },
  {
    question: "How long does processing take?",
    answer: "Most games are processed in 2-5 minutes depending on video length and quality. Professional plan members get priority processing for faster turnaround."
  },
  {
    question: "Can I cancel anytime?",
    answer: "Absolutely. You can cancel your subscription at any time with no questions asked. You'll retain access until the end of your current billing period."
  }
];
---

<BaseLayout title={title} description={description}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <!-- Hero Section -->
    <div class="text-center mb-16">
      <h1 class="text-4xl font-bold tracking-tight mb-6">
        Simple, Transparent Pricing
      </h1>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
        Choose the plan that fits your content creation needs. Start free and
        upgrade as you grow.
      </p>
    </div>

    <!-- Pricing Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
      {plans.map((plan) => (
        <Card className={plan.popular ? "border-primary shadow-lg relative" : ""} client:visible>
          {plan.popular && (
            <div class="absolute -top-3 left-1/2 -translate-x-1/2">
              <span class="bg-primary text-primary-foreground text-xs font-semibold px-3 py-1 rounded-full">
                MOST POPULAR
              </span>
            </div>
          )}
          <CardHeader>
            <CardTitle className="text-2xl">{plan.name}</CardTitle>
            <CardDescription>{plan.description}</CardDescription>
            <div class="mt-4">
              <span class="text-4xl font-bold">{plan.price}</span>
              <span class="text-muted-foreground ml-2">/{plan.period}</span>
            </div>
          </CardHeader>
          <CardContent>
            <ul class="space-y-3 mb-6">
              {plan.features.map((feature) => (
                <li class="flex items-start">
                  <svg
                    class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                  <span class="text-sm">{feature}</span>
                </li>
              ))}
            </ul>
            <Button
              variant={plan.variant}
              className="w-full"
              asChild
              client:visible
            >
              <a href={plan.href}>
                {plan.cta}
              </a>
            </Button>
          </CardContent>
        </Card>
      ))}
    </div>

    <!-- Feature Comparison -->
    <section class="mb-20">
      <h2 class="text-3xl font-bold tracking-tight mb-8 text-center">
        Plan Comparison
      </h2>

      <div class="max-w-4xl mx-auto overflow-x-auto">
        <Card client:visible>
          <CardContent className="pt-6">
            <table class="w-full text-sm">
              <thead>
                <tr class="border-b">
                  <th class="text-left py-3 px-4 font-semibold">Feature</th>
                  <th class="text-center py-3 px-4 font-semibold">Starter</th>
                  <th class="text-center py-3 px-4 font-semibold">Creator</th>
                  <th class="text-center py-3 px-4 font-semibold">Professional</th>
                </tr>
              </thead>
              <tbody>
                <tr class="border-b">
                  <td class="py-3 px-4">Games/month</td>
                  <td class="text-center py-3 px-4">5</td>
                  <td class="text-center py-3 px-4 font-semibold text-primary">50</td>
                  <td class="text-center py-3 px-4 font-semibold">Unlimited</td>
                </tr>
                <tr class="border-b">
                  <td class="py-3 px-4">Video Quality</td>
                  <td class="text-center py-3 px-4">720p</td>
                  <td class="text-center py-3 px-4 font-semibold text-primary">1080p</td>
                  <td class="text-center py-3 px-4 font-semibold">4K</td>
                </tr>
                <tr class="border-b">
                  <td class="py-3 px-4">AI Detection</td>
                  <td class="text-center py-3 px-4">Basic</td>
                  <td class="text-center py-3 px-4 font-semibold text-primary">Advanced</td>
                  <td class="text-center py-3 px-4 font-semibold">Advanced</td>
                </tr>
                <tr class="border-b">
                  <td class="py-3 px-4">Custom Branding</td>
                  <td class="text-center py-3 px-4">
                    <svg class="h-5 w-5 text-red-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                  </td>
                  <td class="text-center py-3 px-4 font-semibold text-primary">
                    <svg class="h-5 w-5 text-green-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  </td>
                  <td class="text-center py-3 px-4 font-semibold">
                    <svg class="h-5 w-5 text-green-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  </td>
                </tr>
                <tr class="border-b">
                  <td class="py-3 px-4">Batch Processing</td>
                  <td class="text-center py-3 px-4">
                    <svg class="h-5 w-5 text-red-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                  </td>
                  <td class="text-center py-3 px-4 font-semibold text-primary">Up to 10</td>
                  <td class="text-center py-3 px-4 font-semibold">100+</td>
                </tr>
                <tr class="border-b">
                  <td class="py-3 px-4">Support</td>
                  <td class="text-center py-3 px-4">Community</td>
                  <td class="text-center py-3 px-4 font-semibold text-primary">Email</td>
                  <td class="text-center py-3 px-4 font-semibold">Dedicated</td>
                </tr>
                <tr>
                  <td class="py-3 px-4">API Access</td>
                  <td class="text-center py-3 px-4">
                    <svg class="h-5 w-5 text-red-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                  </td>
                  <td class="text-center py-3 px-4">
                    <svg class="h-5 w-5 text-red-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                  </td>
                  <td class="text-center py-3 px-4 font-semibold">
                    <svg class="h-5 w-5 text-green-500 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  </td>
                </tr>
              </tbody>
            </table>
          </CardContent>
        </Card>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="mb-20">
      <h2 class="text-3xl font-bold tracking-tight mb-8 text-center">
        Frequently Asked Questions
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-5xl mx-auto">
        {faqs.map((faq) => (
          <Card client:visible>
            <CardHeader>
              <CardTitle className="text-lg">{faq.question}</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-sm text-muted-foreground">{faq.answer}</p>
            </CardContent>
          </Card>
        ))}
      </div>
    </section>

    <!-- CTA Section -->
    <section class="text-center bg-muted/20 rounded-lg p-12">
      <h2 class="text-3xl font-bold tracking-tight mb-4">
        Ready to Start Creating Highlights?
      </h2>
      <p class="text-muted-foreground text-lg mb-8 max-w-2xl mx-auto">
        Start with our free Starter plan or try the Creator plan with a 14-day
        trial. No credit card required.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button size="lg" asChild client:visible>
          <a href="/signup">
            Start Free Trial
          </a>
        </Button>
        <Button variant="outline" size="lg" asChild client:visible>
          <a href="/features">
            Learn More
          </a>
        </Button>
      </div>
    </section>
  </div>
</BaseLayout>
