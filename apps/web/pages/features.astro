---

<BaseLayout title={title} description={description}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <!-- Hero Section -->
    <div class="text-center mb-16">
      <h1 class="text-4xl font-bold tracking-tight mb-6">
        Powerful Features for Basketball Content Creators
      </h1>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
        Everything you need to transform full game footage into engaging highlight
        reels with AI-powered automation and professional quality output.
      </p>
    </div>

    <!-- Feature Categories -->
    {featureCategories.map((category) => (
      <section class="mb-20">
        <div class="flex items-center mb-8">
          <span class="text-4xl mr-4">{category.icon}</span>
          <h2 class="text-3xl font-bold tracking-tight">{category.title}</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {category.features.map((feature) => (
            <Card client:visible>
              <CardHeader>
                <CardTitle className="text-lg">{feature.title}</CardTitle>
                <CardDescription>{feature.description}</CardDescription>
              </CardHeader>
            </Card>
          ))}
        </div>
      </section>
    ))}

    <!-- Use Cases Section -->
    <section class="mb-20 bg-muted/20 rounded-lg p-12">
      <h2 class="text-3xl font-bold tracking-tight mb-4 text-center">
        Built for Every Type of Content Creator
      </h2>
      <p class="text-muted-foreground text-lg mb-12 text-center max-w-2xl mx-auto">
        Whether you're building a YouTube channel, dominating TikTok, or covering games for media,
        our AI adapts to your workflow.
      </p>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {useCases.map((useCase) => (
          <Card client:visible>
            <CardHeader>
              <CardTitle className="text-xl">{useCase.title}</CardTitle>
              <CardDescription>{useCase.description}</CardDescription>
            </CardHeader>
            <CardContent>
              <ul class="space-y-3">
                {useCase.benefits.map((benefit) => (
                  <li class="flex items-start">
                    <svg
                      class="h-5 w-5 text-green-500 mr-2 mt-0.5 flex-shrink-0"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"
                      />
                    </svg>
                    <span class="text-sm text-muted-foreground">{benefit}</span>
                  </li>
                ))}
              </ul>
            </CardContent>
          </Card>
        ))}
      </div>
    </section>

    <!-- Technical Specs -->
    <section class="mb-20">
      <h2 class="text-3xl font-bold tracking-tight mb-8 text-center">
        Technical Quality & Performance
      </h2>

      <Card client:visible>
        <CardContent className="pt-6">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <div class="text-center">
              <div class="text-4xl font-bold text-primary mb-2">4K</div>
              <div class="text-sm text-muted-foreground">Maximum Resolution</div>
              <p class="text-xs text-muted-foreground mt-2">Ultra HD quality for professional output</p>
            </div>
            <div class="text-center">
              <div class="text-4xl font-bold text-primary mb-2">5 min</div>
              <div class="text-sm text-muted-foreground">Average Processing Time</div>
              <p class="text-xs text-muted-foreground mt-2">Full game to highlights in under 5 minutes</p>
            </div>
            <div class="text-center">
              <div class="text-4xl font-bold text-primary mb-2">99.9%</div>
              <div class="text-sm text-muted-foreground">Uptime Guarantee</div>
              <p class="text-xs text-muted-foreground mt-2">Reliable cloud infrastructure</p>
            </div>
            <div class="text-center">
              <div class="text-4xl font-bold text-primary mb-2">MP4, MOV</div>
              <div class="text-sm text-muted-foreground">Export Formats</div>
              <p class="text-xs text-muted-foreground mt-2">Support for all popular video formats</p>
            </div>
            <div class="text-center">
              <div class="text-4xl font-bold text-primary mb-2">50+</div>
              <div class="text-sm text-muted-foreground">Play Types Detected</div>
              <p class="text-xs text-muted-foreground mt-2">Dunks, 3-pointers, blocks, assists, and more</p>
            </div>
            <div class="text-center">
